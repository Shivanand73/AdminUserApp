@model CommonLayer.Models.User;
<h2> This Is ADMIN page</h2>

<div>
    <button id="ButtonAdd" class="btn btn-outline-warning">Insert user</button>
</div>
<div class="container">

<table class="table">
    <thead >
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Mobile</th>
            <th>Password</th>
            <th>Email</th>
            <th>IsAdmin</th>
            <th>Categorys</th>
        </tr>
    </thead>
    <tbody id="Tblbody">
    </tbody>  
</table>

</div>

@* Modal pop. code start from here*@

<div>
      <div class="modal" id="Pmodel" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="Mtitle">Insert Record</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Id"  id="id" />
                 <div class="mb-2">
                     <label asp-for="Name"></label>
                        <input asp-for="Name" placeholder="Enter Name" id="name" class="form-control" />
                 </div>
                    <div class="mb-2">
                        <label asp-for="Phone"></label>
                        <input asp-for="Phone" placeholder="Enter Description" id="phone" class="form-control" />
                 </div>
                 <div class="mb-2">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" placeholder="Enter Mobile Number" id="email" class="form-control" />
                 </div>

                    <div class="mb-2">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Enter Email" id="password" class="form-control" />
                    </div>

                    <div class="mb-2">
                        <label asp-for="IsAdmin"></label>
                        <input asp-for="IsAdmin" placeholder="Enter Email" id="isAdmin" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label asp-for="Categorys"></label>
                        <select asp-for="CatId" class="form-control" id="catid" asp-items="@(new SelectList( ViewBag.cat,"Id","Categorys"))">

                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"  data-bs-dismiss="modal">Close</button>
                    <button type="submit" onclick="Insert();" class="btn btn-primary" id="save">Save changes</button>
                    @* <button type="submit" onclick="Update();" style="display:none" id="edit" class="btn btn-primary">Edit</button> *@
                </div>
            </div>
        </div>
    </div>

</div>